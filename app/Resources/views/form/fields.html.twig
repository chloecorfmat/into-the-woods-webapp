{% block form_row %}
    {% if form.vars.type is defined and form.vars.type == 'date' %}
        <div class="form--item form--input-focused">
    {% else %}
        <div class="form--item">
    {% endif %}
        {{- form_label(form) -}}
        {{- form_errors(form) -}}
        {{- form_widget(form) -}}
    </div>
{%- endblock form_row -%}

{% block text_widget %}
    {% set type = type|default('text') %}
    {{ block('form_widget_simple') }}
{% endblock %}

{%- block form_widget_simple -%}
    {%- set type = type|default('text') -%}
    <input class="form--input-{{ type }}" type="{{ type }}" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}/>
{%- endblock form_widget_simple -%}