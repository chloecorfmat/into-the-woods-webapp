{% extends 'default/organizer.html.twig' %}

{% block breadcrumb %}
    <ol class="breadcrumb--list">
        <li class="breadcrumb--list-item"><a href="#">Mes parcours</a></li>
        <li class="breadcrumb--list-item">{{ track.sportType }}</li>
    </ol>
{% endblock %}

{% block body %}
    <h1>{{ track.sportType }}</h1>

    <div class="content">
        <div class="content--part">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}

            <a href="{{ path('deleteTrack', {'id': track.id}) }}" class="btn btn--full-width btn--danger">Supprimer</a>
        </div>
    </div>

{% endblock %}