{% block body %}
    <div class="editor--container">
        <div>

            <div class="tab-bar">
                <nav class="tab">
                    <button class="tablinks active" onclick="openCity(event, 'tracks-pan')">Tracés</button>
                    <button class="tablinks" onclick="openCity(event, 'pois-pan')">Points d'intéret</button>
                </nav>
                <div class="tabcontent" id="tracks-pan">
                    <button class="btn--action" id="addTrackButton">Ajouter un parcours</button>
                    <ul>
                        <li><input type="checkbox" id="scales" name="feature" value="scales" checked /> Parcours VTT</li>
                        <li><input type="checkbox" id="scales" name="feature" value="scales" checked /> Parcours Run</li>
                        <li><input type="checkbox" id="scales" name="feature" value="scales" checked /> Parcours Kayak</li>
                    </ul>
                </div>
                <div class="tabcontent" id="pois-pan">
                    <p>Enssat 1 </p>
                    <p>Enssat 2 </p>
                    <p>Enssat 3 </p>

                </div>
            </div>
            <a class="btn btn--action"> Retour</a>
        </div>
        <div class="map--container">
            <div id="map"></div>
            <button id="addPoiButton"><div class="btn--editor"><span>+</span></div></button>
        </div>
    </div>


{% endblock %}

