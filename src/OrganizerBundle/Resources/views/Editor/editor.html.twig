{% block body %}
    <div class="editor--container">
        <div class="bar">
            <div class="tab-bar">
                <nav class="tab">
                    <button class="tablinks" onclick="openCity(event, 'tracks-pan')">Tracés</button>
                    <button class="tablinks" onclick="openCity(event, 'pois-pan')">Points d'intéret</button>
                </nav>
                <div class="tabcontent" id="tracks-pan">
                    <button class="btn--action" id="addTrackButton">Ajouter un parcours</button>
                    <ul class="editor--list checkbox-list">
                        <li class="checkbox-item">
                            <label class="checkbox-item--label">
                                <input type="checkbox" checked="checked">
                                <span class="checkmark">
                                    <i class="fas fa-check"></i>
                                </span>
                                <span>Parcours course à pied</span>
                            </label>
                            <button class="btn--track--edit">
                                <i class="fas fa-pen"></i>
                            </button>
                        </li>
                        <li class="checkbox-item">
                            <label class="checkbox-item--label">
                                <input type="checkbox">
                                <span class="checkmark">
                                    <i class="fas fa-check"></i>
                                </span>
                                <span>Parcours kayak</span>
                            </label>
                            <button class="btn--track--edit">
                                <i class="fas fa-pen"></i>
                            </button>
                        </li>
                        <li class="checkbox-item">
                            <label class="checkbox-item--label">
                                <input type="checkbox">
                                <span class="checkmark">
                                    <i class="fas fa-check"></i>
                                </span>
                                <span>Parcours VTT</span>
                            </label>
                            <button class="btn--track--edit">
                                <i class="fas fa-pen"></i>
                            </button>
                        </li>
                    </ul>
                </div>
                <div class="tabcontent" id="pois-pan">
                    <ul class="editor--list list--pois">
                        <li class="list--pois-items">Base nature</li>
                        <li class="list--pois-items">Parking</li>
                        <li class="list--pois-items">Passage dangereux #1</li>
                        <li class="list--pois-items">Passage dangereux #2</li>
                        <li class="list--pois-items">Passage dangereux #3</li>
                        <li class="list--pois-items">Passage dangereux #3</li>
                        <li class="list--pois-items">Passage dangereux #3</li>
                        <li class="list--pois-items">Passage dangereux #3</li>
                        <li class="list--pois-items">Passage dangereux #3</li>
                        <li class="list--pois-items">Passage dangereux #3</li>
                        <li class="list--pois-items">Passage dangereux #3</li>
                        <li class="list--pois-items">Passage dangereux #3</li>
                        <li class="list--pois-items">Passage dangereux #3</li>
                        <li class="list--pois-items">Passage dangereux #4</li>
                        <li class="list--pois-items">Passage dangereux #4</li>
                        <li class="list--pois-items">Passage dangereux #4</li>
                        <li class="list--pois-items">Passage dangereux #4</li>
                        <li class="list--pois-items">Passage dangereux #4</li>
                    </ul>
                </div>
            </div>
            <div class="tab-bar--actions">
                <a class="btn btn--action btn--return">Retour</a>
                <button aria-label="Fermer la barre latérale" class="btn--laterale-bar" id="btn--laterale-bar">x</button>
            </div>
        </div>
        <div class="map--container">
            <div id="map" class="map"></div>
            <button id="addPoiButton" class="btn--add-poi">
                <span class="btn--editor">
                    <span>+</span>
                </span>
            </button>
        </div>
    </div>


{% endblock %}

