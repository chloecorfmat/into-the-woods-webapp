{% extends 'default/organizer.html.twig' %}

{% block breadcrumb %}
    <ol class="breadcrumb--list">
        <li class="breadcrumb--list-item"><a href="{{ path('homepage') }}">Organizer</a></li>
        <li class="breadcrumb--list-item"><a href="{{ path('displayRaid', {'id': raid.id}) }}">{{ raid.name }}</a></li>
        <li class="breadcrumb--list-item"><a href="{{ path('listContacts', {'raidId': raid.id}) }}">Liste des contacts</a></li>
        <li class="breadcrumb--list-item">{{ contact.role }}</li>
    </ol>
{% endblock %}

{% block body %}
    <h1>{{ contact.role }}</h1>

    <div class="content">
        <div class="content--part">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}

            <a href="{{ path('deleteContact', {'contactId': contact.id, 'raidId': contact.raid.id}) }}" class="btn btn--full-width btn--danger">Supprimer</a>
        </div>
    </div>

{% endblock %}