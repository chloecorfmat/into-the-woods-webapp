{% extends 'admin/admin.html.twig' %}

{% block breadcrumb %}
    <ol class="breadcrumb--list">
        <li class="breadcrumb--list-item"><a href="{{ path('homepage') }}">Administration</a></li>
        <li class="breadcrumb--list-item"><a href="{{ path('listSportType') }}">Les types de sports</a></li>
        <li class="breadcrumb--list-item">{{ sportType.sport }}</li>
    </ol>
{% endblock %}

{% block body %}
    <h1>{{ sportType.sport }}</h1>

    <div class="content">
        <div class="content--part">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}

            <a href="{{ path('deleteSportType', {'sportTypeId': sportType.id}) }}" class="btn btn--full-width btn--danger">Supprimer</a>
        </div>
    </div>

{% endblock %}